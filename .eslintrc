{
  "extends": "airbnb/legacy",
  "env": {
    "browser": true
  },

  // specific rules for Talkus
  "rules": {
    "max-len": 0,
    "key-spacing": 0,
    "no-param-reassign": 0,
    "prefer-arrow-callback": 0,
    "no-nested-ternary": 0,
    "no-console": 0,
    "vars-on-top": 0,
    "no-use-before-define": 0,
    "no-eval": 0
  },

  "globals": {
    "html2canvas": false,
    "bowser": false
  }
}
